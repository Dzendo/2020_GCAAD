<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. Базовая тема приложения -->
    <style name="Theme.AndroidTrivia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. Основной фирменный цвет. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. Вторичный фирменный цвет. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. Цвет строки состояния. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. Настройте свою тему здесь. -->
    </style>

    <!-- OLD Base application theme. Базовая тема приложения. не используется теперь-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Theme customization. Настройка темы. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>